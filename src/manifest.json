{
  "manifest_version": 2,
  "name": "netflix tvshowtime tracker",
  "description": "Chrome extension to track netflix watched shows to tvshowtime",
  "version": "0.0.1",
  "options_page": "options/options.html",
  "icons": {
    "16": "icon.ico",
    "48": "icon.ico",
    "128": "icon.ico"
  },
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  },
  "page_action": {
    "default_popup": "popup/popup.html"
  },
  "permissions": [
    "activeTab",
    "notifications",
    "declarativeContent",
    "https://api.tvshowtime.com/",
    "*://*.netflix.com/watch*"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://*.netflix.com/watch*"
      ],
      "js": [
        "tvshowtime.js",
        "content/netflix_content.js"
      ]
    }
  ]
}